<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/im_cover"
        android:layout_marginLeft="@dimen/margin_padding_15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:textSize="@dimen/font_size_13sp"
        android:text="雨后的世界"
        android:layout_marginLeft="@dimen/margin_padding_15dp"
        app:layout_constraintLeft_toRightOf="@id/im_cover"
        app:layout_constraintTop_toTopOf="@id/im_cover"
        android:layout_width="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/font_size_13sp"
        android:text="雨后的世界"
        android:layout_marginLeft="@dimen/margin_padding_15dp"
        app:layout_constraintLeft_toRightOf="@id/im_cover"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        android:layout_width="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/font_size_14sp"
        android:text="+关注"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/margin_padding_15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>