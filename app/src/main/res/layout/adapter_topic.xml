<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <ImageView
        android:id="@+id/im_cover"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_10dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/font_black"
        android:textSize="@dimen/font_size_14sp"
        app:layout_constraintStart_toEndOf="@id/im_cover"
        app:layout_constraintTop_toTopOf="@id/im_cover" />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_10dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/font_losecoupon"
        android:textSize="@dimen/font_size_14sp"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        app:layout_constraintStart_toEndOf="@id/im_cover" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        android:background="@color/bg_dirver"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>