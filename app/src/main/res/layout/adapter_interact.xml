<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/im_cover"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="120dp"
        android:layout_height="60dp"/>

    <TextView
        android:layout_marginEnd="@dimen/margin_padding_10dp"
        android:id="@+id/tv_title"
        android:layout_marginStart="@dimen/margin_padding_10dp"
        app:layout_constraintLeft_toRightOf="@id/im_cover"
        app:layout_constraintTop_toTopOf="@id/im_cover"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_black"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_throught"
        android:layout_marginStart="@dimen/margin_padding_10dp"
        app:layout_constraintLeft_toRightOf="@id/im_cover"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        android:textSize="@dimen/font_size_12sp"
        android:textColor="@color/font_losecoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_join"
        app:layout_constraintLeft_toRightOf="@id/tv_throught"
        app:layout_constraintBottom_toBottomOf="@id/im_cover"
        android:textSize="@dimen/font_size_12sp"
        android:textColor="@color/font_losecoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/bg_dirver"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:layout_marginEnd="@dimen/margin_padding_15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>