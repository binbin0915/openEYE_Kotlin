<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/margin_padding_10dp"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_dirver"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_padding_15dp"
        android:paddingTop="@dimen/margin_padding_10dp"
        android:paddingBottom="@dimen/margin_padding_10dp"
        android:text="热门分类  >"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_size_18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/v_line" />

</androidx.constraintlayout.widget.ConstraintLayout>