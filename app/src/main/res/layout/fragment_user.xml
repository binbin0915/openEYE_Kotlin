<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.main.UserFragment">


    <ImageView
        android:id="@+id/im_avatar"
        android:background="@mipmap/avatar"
        android:layout_marginTop="@dimen/margin_padding_20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/tv_login_hint"
        android:text="点击登录即可评论及发布内容"
        android:layout_marginTop="@dimen/margin_padding_20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_avatar"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/margin_padding_15dp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/v_line"
        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/tv_collect"
        app:layout_constraintTop_toBottomOf="@id/tv_login_hint"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="收藏"
        android:drawableLeft="@mipmap/common_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/v_line"
        app:layout_constraintBottom_toBottomOf="@id/tv_collect"
        app:layout_constraintTop_toTopOf="@id/tv_collect"
        android:layout_width="1dp"
        android:layout_height="30dp"/>

    <TextView
        android:layout_marginTop="@dimen/margin_padding_15dp"
        android:gravity="center"
        android:id="@+id/tv_like"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@id/v_line"
        app:layout_constraintTop_toBottomOf="@id/tv_login_hint"
        app:layout_constraintRight_toRightOf="parent"
        android:text="喜欢"
        android:drawableLeft="@mipmap/common_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v_line2"
        android:layout_marginTop="@dimen/margin_padding_15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_like"
        android:background="@color/bg_dirver"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/tv_concern"
        android:layout_marginTop="20dp"
        android:text="我的关注"
        app:layout_constraintTop_toBottomOf="@id/v_line2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_my_collect"
        android:layout_marginTop="20dp"
        android:text="我的收藏"
        app:layout_constraintTop_toBottomOf="@id/tv_concern"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_video_hint"
        android:layout_marginTop="20dp"
        android:text="视频功能说明"
        app:layout_constraintTop_toBottomOf="@id/tv_my_collect"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_agreement"
        android:layout_marginTop="20dp"
        android:text="用户协议"
        app:layout_constraintTop_toBottomOf="@id/tv_video_hint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_vision_power"
        android:layout_marginTop="20dp"
        android:text="版权声明"
        app:layout_constraintTop_toBottomOf="@id/tv_agreement"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/tv_about_author"
        android:layout_marginTop="20dp"
        android:text="关于作者"
        app:layout_constraintTop_toBottomOf="@id/tv_vision_power"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/font_grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>